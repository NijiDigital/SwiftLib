# file options

--swiftversion 5.6
--exclude Pods,CodeSigning,build,Environments,fastlane,scripts,reports

# format options

--commas inline
--indent 4
--ranges no-space
--wrapparameters after-first 
--wrapcollections before-first
--funcattributes preserve
--typeattributes prev-line
--varattributes same-line
--self init-only
--stripunusedargs closure-only
--trimwhitespace nonblank-lines
--xcodeindentation enabled

# rules

--disable fileHeader,hoistPatternLet,initCoderUnavailable,preferKeyPath,wrap,wrapMultilineStatementBraces,yodaConditions,strongOutlets
--enable isEmpty